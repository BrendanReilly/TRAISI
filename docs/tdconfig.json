{
	"compilerOptions": {
		"moduleResolution": "node",
		"sourceMap": true,
        "declaration": false,
        "rootDirs": ["../src/TRAISI/ClientApp/src/shared/services","../src/TRAISI/ClientApp/src/"],
		"emitDecoratorMetadata": true,
		"baseUrl": "../src/TRAISI/ClientApp/src/",
		"experimentalDecorators": true,
        "target": "es5",
		"module": "es2015",
		"types": ["node"],
		"traceResolution": true,
