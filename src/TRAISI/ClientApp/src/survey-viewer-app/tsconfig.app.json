{
	"compilerOptions": {
		"lib": [
			"es2017",
			"dom",
			"esnext"
		],
		"rootDirs": [
			"../shared/services"
		],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": false,
		"moduleResolution": "node",
		"target": "es6",
		"module": "es6",
		"outDir": "../out-tsc/app",
		"baseUrl": ".",
		"types": [
			"node"
		],
		"paths": {
			"traisi-question-sdk": [
				"../../../../TRAISI.SDK/Client/"
			],
			"shared/*": [
				"../shared/*"
			]
		}
	},
	"files": ["polyfills.ts"],
	"include": [
		"../shared/**/*.ts",
		"./**/*.ts"
	],
	"exclude": [
		"src/test.ts",
		"../admin-app/**/*.ts",
		"../admin-app/**/*.spec.ts",
		"**/*.spec.ts"
	]
}
