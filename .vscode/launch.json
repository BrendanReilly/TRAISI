{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": ".NET Core Launch (console)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "/src/TRAISI/bin/Debug/netcoreapp2.1/TRAISI.dll",
			"args": [],
			"cwd": "${workspaceFolder}",
			"console": "internalConsole",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": ".NET Core Launch TRAISI LOCAL (web)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/TRAISI/bin/Debug/netcoreapp2.1/TRAISI.dll",
			"args": [],
			"cwd": "${workspaceFolder}/src/TRAISI",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart",
			"launchBrowser": {
				"enabled": true,
				"args": "http://localhost:5000",
				"windows": {
					"command": "cmd.exe",
					"args": "/C start http://localhost:5000"
				},
				"osx": {
					"command": "open"
				},
				"linux": {
					"command": "xdg-open"
				}
			},

			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development",
				"ASPNETCORE_URLS": "http://0.0.0.0:5000/"
			},
			"sourceFileMap": {
				"/Views": "/src/TRAISI/Views"
			}
		},
		{
			"name": ".NET Core Attach",
			"type": "coreclr",
			"request": "attach",
			"processId": "${command:pickProcess}"
		}
	]
}
