{
	"compilerOptions": {
		"downlevelIteration": true,
		"lib": ["es2017", "dom", "esnext"],
		"rootDirs": ["../shared/services"],
		"experimentalDecorators": true,
		"declaration": false,
		"moduleResolution": "node",
		"target": "es2015",
		"module": "esnext",
		"outDir": "../out-tsc/app",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@angular/*": ["../../node_modules/@angular/*"],
			"traisi-question-sdk": ["../../../../TRAISI.SDK/Client/"],
			"shared/*": ["../shared/*"]
		}
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": false,
		"fullTemplateTypeCheck": true
	},
	"files": ["polyfills.ts"],
	"include": ["../shared/**/*.ts", "./**/*.ts"],
	"exclude": ["src/test.ts", "../admin-app/**/*.ts", "../admin-app/**/*.spec.ts", "**/*.spec.ts"]
}
